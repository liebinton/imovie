  .clear-flow
  script.
    var seatList = [];
    var sold_data =[1,3,5];
    for(var i=0;i<sold_data.length;i++){
    $(".seat[data-value='"+sold_data[i]+"']").addClass("sold");
    }
    $(".seat").click(function(){
    if($(this).hasClass("sold")){
    return false;
    }
    if ($(this).data("selected")) {
    seatList.splice($.inArray($(this).data("value"),seatList),1);
    $(this).removeClass('selected');
    $(this).data("selected",false);
    }else{
    seatList.push($(this).data("value"));
    $(this).addClass('selected');
    $(this).data("selected",true);
    }
    console.log(seatList);
    $("#ticket_seat_choose").val(seatList);
    $('#ticket_seat_price').val(seatList.length*30);
    });

